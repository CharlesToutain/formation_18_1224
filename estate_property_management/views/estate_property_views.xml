<odoo>
  <data>
    <record id="view_estate_property_form" model="ir.ui.view">
      <field name="name">estate.property.form</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <form string="Estate Property">
          <sheet>
            <group>
              <field name="name"/>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_estate_property_list" model="ir.ui.view">
      <field name="name">estate.property.list</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <list string="Estate Property List">
          <field name="name"/>
          <field name="description"/>
        </list>
      </field>
    </record>

    <record id="action_estate_property" model="ir.actions.act_window">
      <field name="name">Estate Property</field>
      <field name="res_model">estate.property</field>
      <field name="view_mode">list,kanban,form</field>
    </record>

    <menuitem id="menu_estate_property_root" name="Estate Management"/>

    <menuitem id="menu_estate_property" name="Properties" parent="menu_estate_property_root" action="action_estate_property"/>
    
     
  </data>
</odoo>
